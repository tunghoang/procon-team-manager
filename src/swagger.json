        "summary": "Get a question",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of question",
            "required": true,
            "type": "integer"
          }
        ],
        "tags": ["Question"],
        "responses": {
          "200": {
            "description": "Successfully",
