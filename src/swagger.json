{
  "swagger": "2.0",
  "info": {
    "title": "Procon"
  },
  "paths": {
    "/question": {
      "get": {
        "summary": "Get all questions",
        "tags": ["Question"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Question"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/question/{id}": {
      "get": {
        "summary": "Get a question",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of question",
            "required": true,
            "type": "integer"
          }
        ],
        "tags": ["Question"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "404": {
            "description": "Not found"
          },
          "405": {
            "description": "Not allowed"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/answer": {
      "get": {
        "summary": "Get all answers",
        "tags": ["Answer"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Answer"
                  }
                }
              }
            }
          },

          "500": {
            "description": "Server error"
          }
        }
      },
      "post": {
        "summary": "Create your answer",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "question_id": {
                  "type": "integer"
                },
                "answer_data": {
                  "type": "object",
                  "default": {
                    "n": 3,
                    "ops": [
                      {
                        "p": 4,
                        "x": 5,
                        "y": 6,
                        "s": 2
                      },
                      {
                        "p": 11,
                        "x": 3,
                        "y": -12,
                        "s": 3
                      },
                      {
                        "p": 25,
                        "x": 6,
                        "y": 0,
                        "s": 0
                      }
                    ]
                  }
                }
              }
            }
          }
        ],
        "tags": ["Answer"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              }
            }
          },
          "400": {
            "description": "Client error"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/answer/{id}": {
      "get": {
        "summary": "Get your answer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of answer",
            "required": true,
            "type": "integer"
          }
        ],
        "tags": ["Answer"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          },
          "404": {
            "description": "Not found"
          },
          "405": {
            "description": "Not allowed"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "summary": "Edit your answer",
        "tags": ["Answer"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of answer",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "question_id": {
                  "type": "integer"
                },
                "answer_data": {
                  "type": "object",
                  "default": {
                    "n": 1,
                    "ops": [
                      {
                        "p": 4,
                        "x": 1,
                        "y": 1,
                        "s": 2
                      }
                    ]
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          },
          "405": {
            "description": "Not allowed"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/team": {
      "get": {
        "summary": "Get your team",
        "tags": ["Team"],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Team"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },

  "consumes": ["application/json"],
  "definitions": {
    "Team": {
      "required": ["name", "account"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "account": {
          "type": "string"
        },
        "is_admin": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Question": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "start_time": {
          "type": "string",
          "format": "datetime"
        },
        "end_time": {
          "type": "string",
          "format": "datetime"
        },
        "question_data": {
          "type": "string"
        },
        "match_id": {
          "type": "integer"
        }
      }
    },
    "Answer": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "answer_data": {
          "type": "string"
        },
        "score_data": {
          "type": "string"
        },
        "team_id": {
          "type": "integer"
        },
        "match_id": {
          "type": "integer"
        },
        "question_id": {
          "type": "integer"
        }
      }
    }
  }
}
