        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              }
            }
          },
          "400": {
            "description": "Client error"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/answer/{id}": {
      "get": {
        "summary": "Get your answer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of answer",
            "required": true,
            "type": "integer"
